<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputEditText
        style="@style/MainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        app:backgroundTint="@color/colorPrimary"
        app:backgroundSize="4dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/begin_date"
            style="@style/MainStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:drawableEnd="@drawable/ic_select"
            android:drawableRight="@drawable/ic_select"
            android:hint="@string/begin_date"
            android:inputType="date"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/end_date"
            style="@style/MainStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:drawableEnd="@drawable/ic_select"
            android:drawableRight="@drawable/ic_select"
            android:hint="@string/end_date"
            android:inputType="date"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_1"
                style="@style/checkBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/customcheckbox"
                android:checked="true"
                android:text="Arts" />

            <CheckBox
                android:id="@+id/checkbox_2"
                style="@style/checkBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/customcheckbox"
                android:text="Business" />

            <CheckBox
                android:id="@+id/checkbox_3"
                style="@style/checkBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/customcheckbox"
                android:text="Entrepreneurs" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_4"
                style="@style/checkBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/customcheckbox"
                android:text="Politics" />

            <CheckBox
                android:id="@+id/checkbox_5"
                style="@style/checkBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/customcheckbox"
                android:checked="true"
                android:text="Sports" />

            <CheckBox
                android:id="@+id/checkbox_6"
                style="@style/checkBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/customcheckbox"
                android:text="Travel" />
        </LinearLayout>

    </LinearLayout>


    <Button
        style="@style/MainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="SEARCH"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_title" />

</LinearLayout>
