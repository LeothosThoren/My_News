<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <include layout="@layout/search_query_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/begin_date"
            style="@style/MainStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:drawableEnd="@drawable/ic_select"
            android:drawableRight="@drawable/ic_select"
            android:focusable="true"
            android:hint="@string/begin_date"
            android:inputType="date"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/end_date"
            style="@style/MainStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:drawableEnd="@drawable/ic_select"
            android:drawableRight="@drawable/ic_select"
            android:focusable="true"
            android:hint="@string/end_date"
            android:inputType="date"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <include layout="@layout/checkbox_layout" />

    <Button
        android:id="@+id/search_activity_search_button"
        style="@style/MainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/search_button"
        android:textColor="@color/colorAccent"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>
